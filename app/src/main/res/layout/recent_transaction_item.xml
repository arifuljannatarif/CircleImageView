<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/recycler_card_corner"
    app:cardElevation="2dp"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginRight="6dp"
            android:layout_centerVertical="true"
            android:id="@+id/item_icon"
            android:src="@drawable/icon_ledger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/txt_medium"
            android:layout_toLeftOf="@id/item_amount"
            android:id="@+id/item_title"
            android:text="this is a transactio title"
            android:layout_toRightOf="@id/item_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="this is the description writtent about an transacation"
            android:textSize="@dimen/txt_small"
            android:layout_below="@id/item_title"
            android:layout_alignStart="@id/item_title"
            android:layout_toLeftOf="@id/item_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerVertical="true"
            android:textSize="@dimen/txt_large"
            android:paddingLeft="20dp"
            android:id="@+id/item_amount"
            android:layout_alignParentRight="true"
            android:text="$580"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="@dimen/txt_very_small"
            android:text="/@arif"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="SmallSp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
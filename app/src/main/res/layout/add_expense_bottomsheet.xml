<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.Barrier
        app:barrierDirection="bottom"
        android:id="@+id/barrier1"
        app:constraint_referenced_ids="top_line,tophint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/top_line"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="?colorControlNormal"
        android:background="@drawable/rounded_border"
        android:layout_width="120dp"
        android:layout_height="5dp"/>
    <TextView
        android:id="@+id/tophint"
        android:textSize="@dimen/txt_large"
        android:text="Add Expense"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/top_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        app:layout_constraintTop_toBottomOf="@id/barrier1"
        android:layout_width="match_parent"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center_vertical"
            android:layout_alignBottom="@id/amount"
            android:layout_alignTop="@id/amount"
            app:layout_constraintTop_toTopOf="@+id/amount"
            android:id="@+id/amount_hint"
            android:textSize="@dimen/input_hint_ts"
            android:text="Amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center_vertical"
            android:layout_alignBottom="@id/amount"
            android:layout_alignTop="@id/amount"
            android:layout_alignLeft="@id/amount"
            android:text="Tk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:paddingLeft="15dp"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:nextFocusDown="@null"
            android:gravity="end|center_vertical"
            android:hint="$000"
            style="@style/myEdittext_style"
            android:paddingRight="8dp"
            android:background="@android:color/transparent"
            android:id="@+id/amount"
            android:layout_alignParentEnd="true"
            android:minWidth="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_below="@id/amount"
            android:background="@color/add_expense_border_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/transaction_item_border_height"/>
        <TextView
            android:gravity="center_vertical"
            android:layout_alignBottom="@id/add_sel_catagory"
            android:layout_alignTop="@id/add_sel_catagory"
            android:id="@+id/type_hint"
            android:textSize="@dimen/input_hint_ts"
            android:text="Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Spinner
            style="@style/addexpensespinnerstyle"
            android:layout_below="@id/amount"
            android:id="@+id/add_sel_catagory"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/spinner_height"/>
        <View
            android:layout_below="@id/add_sel_catagory"
            android:background="@color/add_expense_border_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/transaction_item_border_height"/>
        <TextView
            android:gravity="center_vertical"
            android:layout_alignBottom="@id/catagory"
            android:layout_alignTop="@id/catagory"
            android:id="@+id/catagory_hint"
            android:textSize="@dimen/input_hint_ts"
            android:text="Catagory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Spinner
            style="@style/addexpensespinnerstyle"
            android:layout_below="@id/add_sel_catagory"
            android:id="@+id/catagory"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/spinner_height"/>
        <View
            android:layout_below="@id/catagory"
            android:background="@color/add_expense_border_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/transaction_item_border_height"/>

        <TextView
            android:gravity="center_vertical"
            android:layout_alignBottom="@id/date"
            android:layout_alignTop="@id/date"
            android:id="@+id/date_hint"
            android:textSize="@dimen/input_hint_ts"
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.google.android.material.chip.ChipGroup
            android:orientation="horizontal"
            app:singleSelection="true"
            android:layout_marginLeft="70dp"
            android:layout_below="@id/catagory"
            android:id="@+id/date"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.google.android.material.chip.Chip
                android:gravity="center_vertical|end"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:text="Today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.google.android.material.chip.Chip
                android:gravity="center_vertical|end"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:text="Yesterday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.chip.Chip
                android:gravity="center_vertical|end"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:text="select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </com.google.android.material.chip.ChipGroup>
        <View
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/date"
            android:background="@color/add_expense_border_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/transaction_item_border_height"/>

        <TextView
            android:gravity="center_vertical"
            android:layout_alignBottom="@id/mode"
            android:layout_alignTop="@id/mode"
            android:id="@+id/mode_hint"
            android:textSize="@dimen/input_hint_ts"
            android:text="Mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Spinner
            style="@style/addexpensespinnerstyle"
            android:layout_below="@id/date"
            android:id="@+id/mode"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/spinner_height"/>
        <View
            android:layout_below="@id/mode"
            android:background="@color/add_expense_border_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/transaction_item_border_height"/>
        <TextView
            android:gravity="center_vertical"
            android:layout_alignBottom="@id/notes"
            android:layout_alignTop="@id/notes"
            android:id="@+id/notes_hint"
            android:textSize="@dimen/input_hint_ts"
            android:text="Notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_marginTop="8dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/notes_hint"
            style="@style/myEdittext_style"
            android:paddingBottom="10dp"
            android:background="@android:color/transparent"
            android:hint="Note about the transaction"
            android:id="@+id/notes"
            android:layout_below="@id/mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_below="@id/notes"
            android:background="@color/add_expense_border_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/transaction_item_border_height"/>
        <Button
            android:layout_marginTop="10dp"
            android:background="@drawable/selectable_button"
            android:backgroundTint="@color/green_light"
            android:layout_below="@id/notes"
            android:layout_centerHorizontal="true"
            android:text="save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
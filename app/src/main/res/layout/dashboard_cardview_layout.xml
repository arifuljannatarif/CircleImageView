<RelativeLayout
    android:layout_marginTop="?attr/actionBarSize"
    android:layout_marginBottom="15dp"
    android:paddingTop="15dp"
    android:layout_gravity="bottom"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/dashboaritem_corner"
        android:id="@+id/card1"
        app:cardElevation="4dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="?colorPrimaryDark"
        android:layout_width="@dimen/dash_board_circledime"
        android:layout_height="@dimen/dash_board_circledime">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textStyle="bold"
                android:textColor="@color/white"
                android:paddingVertical="2dp"
                android:text="Balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:drawableTint="@color/white"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_medium"
                android:id="@+id/text_Income"
                android:text="232323"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <ProgressBar
        android:elevation="5dp"
        android:layout_alignEnd="@id/card1"
        android:layout_alignStart="@id/card1"
        android:layout_alignTop="@id/card1"
        android:layout_alignBottom="@id/card1"
        android:layout_marginTop="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginRight="-1dp"
        android:layout_marginBottom="-1dp"
        android:rotation="-90"
        android:max="100"
        android:progress="60"
        style="?android:progressBarStyleHorizontal"
        android:progressDrawable="@drawable/progress_background"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/dashboaritem_corner"
        android:id="@+id/card2"
        app:cardElevation="4dp"
        android:layout_below="@id/card1"
        android:layout_marginTop="-40dp"
        android:layout_toLeftOf="@id/card1"
        app:cardBackgroundColor="?colorAccent"
        android:layout_width="@dimen/dash_board_circledime"
        android:layout_height="@dimen/dash_board_circledime">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/white"
                android:paddingVertical="2dp"
                android:text="Income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textStyle="bold"
                android:drawableTint="@color/white"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_medium"
                android:id="@+id/text_Expense"
                android:text="232323"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/dashboaritem_corner"
        android:id="@+id/card3"
        app:cardElevation="4dp"
        android:layout_marginTop="-40dp"
        android:layout_below="@id/card1"
        android:layout_toRightOf="@id/card1"
        app:cardBackgroundColor="?colorAccent"
        android:layout_width="@dimen/dash_board_circledime"
        android:layout_height="@dimen/dash_board_circledime">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/white"
                android:paddingVertical="2dp"
                android:text="Expense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textStyle="bold"
                android:drawableTint="@color/white"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_medium"
                android:id="@+id/text_balance"
                android:text="232323"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>

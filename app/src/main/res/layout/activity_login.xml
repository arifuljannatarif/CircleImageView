<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCD6D6"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.login.Login">
    <ImageView
        android:id="@+id/top_circle"
        android:scaleType="fitXY"
        android:layout_marginLeft="-35dp"
        android:layout_marginRight="-35dp"
        android:layout_marginTop="-100dp"
        android:src="@drawable/login_gradient"
        android:layout_width="match_parent"
        android:layout_height="350dp"/>
    <ImageView
        android:layout_marginTop="50dp"
        android:layout_below="@id/top_circle"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-40dp"
        android:layout_marginRight="-70dp"
        android:src="@drawable/login_gradient"
        android:layout_width="250dp"
        android:maxHeight="450dp"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:elevation="6dp"
        android:layout_margin="12dp"
        android:layout_centerInParent="true"
        android:background="@drawable/login_bg"
        android:layout_width="match_parent"
        android:layout_height="500dp">
        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/logo"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <EditText
            android:layout_below="@id/logo"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:textColor="@color/black"
            android:id="@+id/user_name"
            android:textColorHint="@color/gray"
            android:drawableTint="@color/gray"
            android:drawableRight="@drawable/ic_mail_black_24dp"
            android:hint="Username"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:textColor="@color/black"
            android:layout_below="@id/user_name"
            android:id="@+id/password"
            android:textColorHint="@color/gray"
            android:drawableRight="@drawable/ic_vpn_key_black_24dp"
            android:hint="Password"
            android:drawableTint="@color/gray"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/forgot_password"
            android:layout_marginTop="30dp"
            android:layout_alignStart="@id/password"
            android:layout_below="@id/password"
            android:textColor="@color/blue"
            android:text="Forgot Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginTop="30dp"
            android:layout_below="@id/forgot_password"
            android:onClick="dashboard"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="120dp"
            android:layout_alignParentEnd="true"
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>
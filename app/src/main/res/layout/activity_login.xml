<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCD6D6"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.mvc.activity.login.Login">
    <ImageView
        android:id="@+id/top_circle"
        android:scaleType="fitXY"
        android:layout_marginLeft="-35dp"
        android:layout_marginRight="-35dp"
        android:layout_marginTop="-100dp"
        android:src="@drawable/login_gradient"
        android:layout_width="match_parent"
        android:layout_height="350dp"/>
    <ImageView
        android:layout_marginTop="50dp"
        android:layout_below="@id/top_circle"
        android:scaleType="fitXY"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="-150dp"
        android:src="@drawable/login_gradient"
        android:layout_width="300dp"
        android:rotation="-20"
        android:maxHeight="450dp"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:elevation="6dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="25dp"
        android:layout_centerInParent="true"
        android:backgroundTint="?android:windowBackground"
        android:background="@drawable/login_bg"
        android:layout_width="match_parent"
        android:layout_height="500dp">
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_marginBottom="6dp"
            android:id="@+id/logo"
            android:layout_centerHorizontal="true"
            android:src="@drawable/app_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:textStyle="italic"
            android:textColor="@color/gray"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:backgroundTint="@android:color/transparent"
            android:singleLine="true"
            android:layout_below="@id/logo"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:textColor="?colorControlNormal"
            android:id="@+id/user_name"
            android:textColorHint="?colorControlNormal"
            android:drawableTint="?colorControlNormal"
            android:drawableRight="@drawable/ic_mail_black_24dp"
            android:hint="Username"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginTop="-5dp"
            android:layout_alignEnd="@id/user_name"
            android:layout_alignStart="@id/user_name"
            android:layout_below="@id/user_name"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <EditText
            android:backgroundTint="@android:color/transparent"
            android:singleLine="true"
            android:textColor="?colorControlNormal"
            android:layout_below="@id/user_name"
            android:id="@+id/password"
            android:textColorHint="?colorControlNormal"
            android:drawableRight="@drawable/ic_vpn_key_black_24dp"
            android:hint="Password"
            android:drawableTint="?colorControlNormal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_marginTop="-5dp"
            android:layout_alignEnd="@id/password"
            android:layout_alignStart="@id/password"
            android:layout_below="@id/password"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:layout_marginLeft="6dp"
            android:id="@+id/forgot_password"
            android:layout_marginTop="20dp"
            android:layout_alignStart="@id/password"
            android:layout_below="@id/password"
            android:textColor="@color/gray"
            android:text="Forgot Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnLogin"
            android:layout_marginTop="30dp"
            android:layout_below="@id/forgot_password"
            android:onClick="dashboard"
            android:layout_alignRight="@id/password"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:text="Login"
            android:background="@drawable/rounded_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="6dp"
            android:id="@+id/signup"
            android:layout_toLeftOf="@id/btnLogin"
            android:layout_alignTop="@id/btnLogin"
            android:layout_alignBottom="@id/btnLogin"
            android:gravity="center_vertical"
            android:layout_marginRight="40dp"
            android:textColor="@color/gray"
            android:text="SignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"
            android:tint="?colorControlNormal"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_width="40dp"
            android:scaleType="fitXY"
            android:layout_height="40dp"/>
        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progressBar"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>